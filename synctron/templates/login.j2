{% extends "base.j2" %}

{% set title = "Log In - Synctron" %}

{% block content %}
<div class="row">
	<div class="span12">
		{% if login_failed %}
		<div class="alert alert-error">
			<b>Error:</b> Wrong username or password.
		</div>
		{% endif %}

		<form id="login-form" class="form-horizontal" method="POST">
			<fieldset>
				<legend>Log In</legend>

				{{ form.csrf_token }}

				{{ forms.input_field(form.username) }}

				{{ forms.input_field(form.password) }}

				<button id="submit" type="submit" class="btn btn-primary">Log In</button>
			</fieldset>
		</form>
	</div>
</div>
{% endblock %}

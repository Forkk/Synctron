{% extends "base.j2" %}

{% block title %}Home - Synctron{% endblock %}

{% block css_head %}
{{ super() }}

<style>
.room-title-col { width: 70%; }
.room-slug-col { width: 30%; }
.room-count-col { width: 42px; }
</style>
{% endblock %}

{% block js_body %}
{{ super() }}
<script type="text/javascript" src="/static/js/socketio/socket.io.min.js"></script>
<script type="text/javascript" src="/static/js/pages/room_list.js"></script>
{% endblock %}

{% block content %}

<div class="row">
	<div class="span12">
		<div class="hero-unit">
			<h1>Welcome to Synctron!</h1>
			<p>Synctron is a website that allows you to easily watch YouTube videos with your friends.</p>
			<p>Currently Synctron is in the very early stages of development, but it <em>is</em> in a working state. If you'd like to help test it out, just click on one of the rooms below. Just remember that this is by no means complete yet, so please don't stare directly at the bugs.</p>
		</div>
	</div>
</div>

<div class="row">
	<div class="span12">
		<h1 class="text-center">Popular Rooms</h1>
	</div>

	<div class="span6">
		<div class="well">
			<h3>Most Stars</h3>
			<table class="table table-condensed table-bordered">
				<thead>
					<tr>
						<th class="room-title-col">Room Title</th>
						<th class="room-slug-col">Room Slug</th>
						<th class="room-count-col">Stars</th>
					</tr>
				</thead>

				<tbody>
					{% for room in popular_rooms[:10] %}
					<tr>
						<td><a href="/room/{{ room.slug }}">{{ room.title }}</a></td>
						<td><a href="/room/{{ room.slug }}">{{ room.slug }}</a></td>
						<td class="text-right">{{ room.stars }}</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

	<div class="span6">
		<div class="well">
			<h3>Most Users</h3>
			<table class="table table-condensed table-bordered roomlist">
				<thead>
					<tr>
						<th class="room-title-col">Room Title</th>
						<th class="room-slug-col">Room Slug</th>
						<th class="room-count-col">Users</th>
					</tr>
				</thead>

				<tbody>
				</tbody>
			</table>
		</div>
	</div>
</div>

{% endblock %}

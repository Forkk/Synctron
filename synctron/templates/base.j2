	{# Import macros. #}
	{% import "forms.j2" as forms with context %}

	{% if config.GOOGLE_ANALYTICS_ID %}
	<script>
	var _gaq = [['_setAccount', '{{ config.GOOGLE_ANALYTICS_ID }}'], ['_trackPageview']];
	(function(d, t)
	{
		var g = d.createElement(t), s = d.getElementsByTagName(t)[0];
